<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Title01" parent="">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/strong</item>
    </style>

    <style name="Title02" parent="">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/strong</item>
    </style>

    <style name="Body" parent="">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Input" parent="">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/medium</item>
    </style>

    <style name="Subtitle" parent="">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/medium</item>
    </style>

    <style name="Detail" parent="">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/medium</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textColor">@color/strong</item>
        <item name="android:textColorHint">@color/light</item>
        <item name="android:editTextColor">@color/strong</item>
    </style>

    <style name="Theme.DTTapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/medium</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>